# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
# Get these from: Supabase Dashboard → Project Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_public_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here


# Enable Real-time AI
ENABLE_REAL_CALLING=true
ENABLE_REALTIME_AI=true

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Site URL (for WebSocket)
NEXT_PUBLIC_SITE_URL=your_site_url_here


WEBSOCKET_SERVER_URL=https://your-websocket-server.com

# Plivo
PLIVO_AUTH_ID=your_plivo_auth_id_here
PLIVO_AUTH_TOKEN=your_plivo_auth_token_here
PLIVO_PHONE_NUMBER=your_plivo_phone_number_here


# Key ID (Starts with rzp_test_)
RAZORPAY_KEY_ID=your_razorpay_key_id_here
# Key Secret (From Step 1)
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here
# Webhook Secret (From Step 2)
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret_here
# Public Key (MUST match RAZORPAY_KEY_ID)
NEXT_PUBLIC_RAZORPAY_KEY_ID=your_razorpay_key_id_here

# ⚠️ IMPORTANT SECURITY NOTES:
# 1. Never commit .env.local to Git (it's in .gitignore)
# 2. The SERVICE_ROLE_KEY bypasses RLS - keep it secret!
# 3. Only use SERVICE_ROLE_KEY in server-side code and scripts
# 4. Share this template, never share the actual .env.local file
