{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "transaction",
    "property",
    "location",
    "pricing"
  ],
  "properties": {
    "rera_number": {
      "type": "string"
    },
    "transaction": {
      "type": "string",
      "enum": [
        "sell",
        "rent",
        "lease",
        "pg"
      ]
    },
    "property": {
      "type": "object",
      "required": [
        "category",
        "use_case"
      ],
      "properties": {
        "plot_area": {
          "type": "number",
          "minimum": 0
        },
        "category": {
          "type": "string",
          "enum": [
            "residential",
            "commercial",
            "land"
          ]
        },
        "use_case": {
          "type": "string"
        },
        "residential": {
          "type": "object",
          "properties": {
            "bhk": {
              "type": "string"
            },
            "carpet_area": {
              "type": "number",
              "minimum": 0
            },
            "built_up_area": {
              "type": "number",
              "minimum": 0
            },
            "super_built_up_area": {
              "type": "number",
              "minimum": 0
            },
            "configurations": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "bhk": {
                    "type": "string"
                  },
                  "carpet_area": {
                    "type": "number"
                  },
                  "built_up_area": {
                    "type": "number"
                  },
                  "super_built_up_area": {
                    "type": "number"
                  }
                }
              }
            }
          },
          "additionalProperties": false
        },
        "commercial": {
          "type": "object",
          "properties": {
            "area": {
              "type": "number",
              "minimum": 0
            },
            "built_up_area": {
              "type": "number",
              "minimum": 0
            },
            "ground_floor": {
              "type": "boolean"
            }
          },
          "additionalProperties": false
        },
        "land": {
          "type": "object",
          "properties": {
            "plot_area": {
              "type": "number",
              "minimum": 0
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "location": {
      "type": "object",
      "required": [
        "city",
        "locality"
      ],
      "properties": {
        "city": {
          "type": "string"
        },
        "locality": {
          "type": "string"
        },
        "landmark": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "pricing": {
      "type": "object",
      "required": [
        "min",
        "max"
      ],
      "properties": {
        "min": {
          "type": "number",
          "minimum": 0
        },
        "max": {
          "type": "number",
          "minimum": 0
        }
      },
      "additionalProperties": false
    },
    "media": {
      "type": "object",
      "properties": {
        "thumbnail": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": false
    },
    "description": {
      "type": "string"
    }
  },
  "additionalProperties": false
}